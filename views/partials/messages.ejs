<% if(Login_Message != '') { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert"><br>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <%= Login_Message %>
            <span aria-hidden="true">&times;</span>
        </button>
    </div><br>
<% } %>

